<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footerCard"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="80dp"
    android:layout_marginEnd="80dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/footer_bg"
    android:elevation="4dp"
    android:clipToOutline="false"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1) Icono carpeta, ahora a 24dp del borde -->
        <ImageButton
            android:id="@+id/btnGoFolder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/folder"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnGoGrabacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginStart="24dp"
            android:paddingLeft="24dp"
           />

        <!-- 2) Icono cámara -->
        <ImageButton
            android:id="@+id/btnGoGrabacion"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/lupa"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@id/btnGoFolder"
            app:layout_constraintEnd_toStartOf="@+id/btnGoLogin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <!-- 3) Botón central -->
        <ImageButton
            android:id="@+id/btnGoLogin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="0dp"
            android:background="@drawable/fab_border"
            android:src="@drawable/login"
            android:tint="#A11991"
            android:scaleType="center"
            android:elevation="8dp"
            app:layout_constraintStart_toEndOf="@id/btnGoGrabacion"
            app:layout_constraintEnd_toStartOf="@+id/btnGoCategorias"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 4) Icono historial -->
        <ImageButton
            android:id="@+id/btnGoCategorias"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/camara"
            android:tint="#A11991"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@id/btnGoLogin"
            app:layout_constraintEnd_toStartOf="@+id/btnGoContacts"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <!-- 5) Icono settings, ahora a 24dp del borde -->
        <ImageButton
            android:id="@+id/btnGoContacts"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/contactos"
            android:tint="#A11991"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@id/btnGoCategorias"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

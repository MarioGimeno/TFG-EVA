<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footerCard"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/footer_bg"
    android:paddingBottom="0dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnGoFolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/folder"
            android:background="@null"
            android:contentDescription="cd_folder"
            android:padding="8dp"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnGoCategorias"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/lupa"
            android:background="@null"
            android:contentDescription="cd_search"
            android:padding="8dp"
            android:scaleType="centerInside"/>

        <!-- FAB central -->
        <FrameLayout
            android:id="@+id/btnGoLogin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="0dp"
            android:background="@drawable/fab_border">  <!-- borde vacÃ­o por defecto -->

            <!-- Icono interno, con id para poder cambiarlo -->
            <ImageView
                android:id="@+id/ivFabIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo_eva"
            android:contentDescription="Logo"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/btnGoGrabacion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/camara"
            android:background="@null"
            android:contentDescription="cd_camera"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnGoContacts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/contactos_icon"
            android:background="@null"
            android:contentDescription="cd_contacts"
            android:padding="8dp"
            android:scaleType="centerInside"/>

    </LinearLayout>
</FrameLayout>

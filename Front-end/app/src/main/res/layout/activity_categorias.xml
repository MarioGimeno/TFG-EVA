<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- GRID de filtros: 2 cols Ã— 2 filas -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/glFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:padding="8dp"
            android:paddingBottom="0dp"
            app:columnCount="2"
            app:rowCount="2">

            <include
                android:id="@+id/cardTodos"
                layout="@layout/filter_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <include
                android:id="@+id/cardEntidades"
                layout="@layout/filter_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0" />

            <include
                android:id="@+id/cardGratuitos"
                layout="@layout/filter_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1" />

            <include
                android:id="@+id/cardAccesibles"
                layout="@layout/filter_card"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1" />

        </androidx.gridlayout.widget.GridLayout>

        <!-- RecyclerView debajo, sin scroll interno -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:paddingTop="0dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

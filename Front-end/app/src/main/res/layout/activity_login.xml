<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eac1e5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.LoginActivity"
    >

    <!-- Imagen de fondo en la parte superior -->
    <RelativeLayout
        android:id="@+id/image_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/eva"
            android:alpha="0.4"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:padding="5dp"/>

        <!-- Texto centrado en la imagen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVA"
            android:textSize="120sp"
            android:textColor="#20032e"
            android:fontFamily="@font/belleza"
            android:textStyle="bold"
            android:layout_centerInParent="true" /> <!-- Centra el texto en el RelativeLayout -->

    </RelativeLayout>

    <!-- Contenedor de inicio de sesión y registro -->
    <ScrollView
        android:id="@+id/login_register_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_section"
        android:layout_above="@id/bottom_navigation"
        android:layout_marginTop="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/login_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"> <!-- Esquinas redondeadas -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"

                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inicie sesión:"
                        android:textColor="#A11991"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:text="Email address"
                        android:textStyle="bold"
                        android:textColor="#20032e"
                        android:textColorHint="#555555"/>

                    <EditText
                        android:id="@+id/rspEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="#A11991"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:text="Password"
                        android:textStyle="bold"
                        android:textColor="#20032e"
                        android:textColorHint="#555555"/>

                    <EditText
                        android:id="@+id/rspPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:backgroundTint="#A11991"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:alpha="0.7"
                            android:text="Remember me"
                            android:buttonTint="#A11991"
                            android:textColor="#20032e"
                            />
                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Login"
                        app:cornerRadius="32dp"
                        app:backgroundTint="#20032e"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/txtRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿No tienes cuenta? Regístrate aquí"
                        android:layout_marginTop="16dp"
                        android:textColor="#A11991"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección de Registro -->
            <!-- Sección de Registro -->
            <androidx.cardview.widget.CardView
                android:id="@+id/register_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"> <!-- Esquinas redondeadas -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:background="@android:color/white"> <!-- Fondo igual al login -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registro:"
                        android:textColor="#A11991"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <View android:layout_width="wrap_content" android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:text="Nombre completo"
                        android:textStyle="bold"
                        android:textColor="#20032e"/>

                    <EditText
                        android:id="@+id/rspFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:backgroundTint="#A11991"
                        android:textColor="#20032e"
                        android:textColorHint="#555555"/>

                    <View android:layout_width="wrap_content" android:layout_height="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:text="Email address"
                        android:textStyle="bold"
                        android:textColor="#20032e"/>

                    <EditText
                        android:id="@+id/rspEmailRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="#A11991"
                        android:textColor="#20032e"
                        android:textColorHint="#555555"/>

                    <View android:layout_width="wrap_content" android:layout_height="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:text="Contraseña"
                        android:textStyle="bold"
                        android:textColor="#20032e"/>

                    <EditText
                        android:id="@+id/rspPasswordRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:backgroundTint="#A11991"
                        android:textColor="#20032e"
                        android:textColorHint="#555555"/>

                    <View android:layout_width="wrap_content" android:layout_height="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:text="Confirmar Contraseña"
                        android:textStyle="bold"
                        android:textColor="#20032e"/>

                    <EditText
                        android:id="@+id/rspConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:backgroundTint="#A11991"
                        android:textColor="#20032e"
                        android:textColorHint="#555555"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Registrarse"
                        app:cornerRadius="32dp"
                        app:backgroundTint="#20032e"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/txtLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Ya tienes cuenta? Inicia sesión aquí"
                        android:layout_marginTop="16dp"
                        android:textColor="#A11991"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <!-- Mensaje de bienvenida y botón de logout -->
    <LinearLayout
        android:id="@+id/welcome_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_section"
        android:layout_above="@id/bottom_navigation"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido, [Usuario]"
            android:textSize="24sp"
            android:textColor="@color/my_primary"
            android:layout_gravity="center_horizontal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cerrar Sesión"
            app:cornerRadius="32dp" />
    </LinearLayout>

    <!-- Menú inferior de navegación fijo en la parte inferior -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:weightSum="4"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/actividades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/buscar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios"
                android:textSize="16sp"
                android:textColor="#20032e"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/carrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/carpeta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi carpeta"
                android:textSize="16sp"
                android:textColor="#20032e"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reservas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/alarma" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarma"
                android:textSize="16sp"
                android:textColor="#20032e"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/perfil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sesión"
                android:textSize="16sp"
                android:textColor="#20032e"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

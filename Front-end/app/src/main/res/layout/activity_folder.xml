<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".screens.LoginActivity">

    <!-- 1) Imagen de fondo al 40% de altura -->
    <ImageView
        android:id="@+id/videoBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/carpetapersonal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.40"/>

    <!-- 2) FrameLayout “card wrapper” con borde y padding -->
    <FrameLayout
        android:id="@+id/card_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/card_border_wrapper"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/videoBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 3) CardView con todas las esquinas redondeadas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            android:clipToOutline="false">

            <!-- 4) Contenedor para RecyclerView + botón -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- RecyclerView ocupa todo el espacio (0dp + constraints) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFiles"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="8dp"
                    android:paddingBottom="90dp"
                    android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Botón “Subir” centrado abajo -->
                <ImageView
                    android:id="@+id/imgUpload"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_subida"
                    android:contentDescription="@string/upload_file"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
